{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "opener:default",
    "shell:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "comment": "Explicitly allow exists if default isn't enough"
    },
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA/**" }]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true
        }
      ]
    }
  ]
}
